pipeline{

    agent any

    tools{
        maven 'LocalMaven'
        jdk 'LocalJDK'
    }
    stages{

        stage('Build')
        {
            steps{
                echo 'This is build step'
            }
        }

        stage('parallel Stages'){
            parallel{
             
             stage('Test'){
             steps{
                echo 'This is test step'
             }
             }

             stage('Report'){

                 steps{

                     input message 'Do you want to proceed?'

                 
                 }
                 post{

                     success{

                         echo 'Generating Report'
                     }
                 }
             }
            } 
        }
    }
}
